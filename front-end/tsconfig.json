{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,               // avoids churn from deep deps (optional but helpful)
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  }
}